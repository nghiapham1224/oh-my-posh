{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": false,
      "segments": [
        {
          "type": "root",
          "style": "plain",
          "foreground": "#BF231D",
          "template": " \uf0e7 "
        },
        {
          "type": "os",
          "style": "diamond",
          "foreground": "#26C6DA",
          "background": "#3A3A3A",
          "leading_diamond": "\ue0c5",
          "template": " {{ .Icon }} ",
          "trailing_diamond": ""
        },
        {
          "type": "session",
          "style": "powerline",
          "foreground": "#fb7e14",
          "background": "#292929",
          "powerline_symbol": "\ue0b0",
          "template": " {{.HostName}}\ue0bd{{.UserName}} "         
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#424242",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#053F22{{ end }}",
            "{{ if or (gt .Ahead 0) (gt .Behind 0) }}#0A703E{{ end }}"
          ],
          "background": "#E0E0E0",
          "template": " [{{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}<#BD6200> \uf044 {{ .Working.String }}</>{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}<#053F22> \uf046 {{ .Staging.String }}</>{{ end }}] ",
          "properties": {
            "branch_max_length": 30,
            "fetch_status": true,
            "fetch_upstream_icon": true
          }
        },
        {
          "type": "path",
          "style": "powerline",
          "foreground": "#43CCEA",
          "background": "#29315A",
          "powerline_symbol": "\ue0b0",
          "template": " {{ path .Path .Location}} ",
          "properties": {
            "style": "full"
          }
        },
        {
          "background": "#ed1941",
          "foreground": "#fffef9",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": " \uf12a >>{{ .Meaning }} ",
          "type": "exit"
        },
        {
          "foreground": "#ffffff",
          "style": "plain",
          "template": " {{if .Root}}#{{else}}${{end}}",
          "type": "text"
        }
      ]
    }
  ],
  "tooltips": [
    {
      "type": "aws",
      "tips": [
        "aws"
      ],
      "style": "diamond",
      "foreground": "p:white",
      "background": "p:orange",
      "leading_diamond": "\ue0b0",
      "trailing_diamond": "\ue0b4",
      "template": " \ue7ad {{ .Profile }}{{ if .Region }}@{{ .Region }}{{ end }} ",
      "properties": {
        "display_default": true
      }
    },
    {
      "type": "az",
      "tips": [
        "az"
      ],
      "style": "diamond",
      "foreground": "p:white",
      "background": "p:blue",
      "leading_diamond": "\ue0b0",
      "trailing_diamond": "\ue0b4",
      "template": " \ufd03 {{ .Name }} ",
      "properties": {
        "display_default": true
      }
    }
  ],
  "transient_prompt": {
    "background": "transparent",
    "foreground": "#ffffff",
    "template": "~ "
  },
  "palette": {
    "black": "#111111",
    "white": "#f7f7f7"
  },
  "console_title_template": "{{if .Root}} \u26a1 {{end}}{{.UserName}} \u2794 üìÅ{{.Folder}}",
  "final_space": true
}
